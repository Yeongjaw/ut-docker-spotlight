<%- if has_thumbnail?(document) && tn = render_thumbnail_tag(document, { alt: '' }, 'aria-hidden': true, tabindex: -1, counter: document_counter_with_offset(document_counter)) %>
  <div class="document-thumbnail spotlight-admin-thumbnail">
    <%= tn %>
  </div>
<%- else %>
  <div class="document-thumbnail spotlight-admin-thumbnail">
    <a aria-hidden="true" tabindex="-1" href="/spotlight/<%= @exhibit.slug %>/catalog/<%= document.id %>">
      <%= image_tag("metadata_only_placeholder.png", :alt => "Placeholder Image") %>
    </a>
  </div>
<% end %>
